<body>
  <p id="notice"></p>
 <h1>Books</h1>

 <table>
   <thead>
     <tr>
      <th><strong>Title</strong></th>
      <th><strong>Body</strong></th>
    </tr>
  </thesd>

 <% @books.each do |book| %>
   <tbody>
     <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "Show", book_path(book.id) %></td>
      <td><%= link_to "Edit", edit_book_path(book.id) %></td>
      <td><%= link_to "Destroy", book_path(book.id), method: :delete, "date-confirm" => "Are You Sure?" %></td>
     </tr>
   </tbody>
  </table>

 <% end %>

 <h2>New book</h2>

  <% if @book.errors.any? %>
  <div id="error_explanation">
  <h2><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
   <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
   </ul>

  <div class="field">
    <label for="book_title">Title</label>
    <div class="field_with_errors">
     <%= f.text_field :title %>
    </div>
  </div>

    <div class="field">
    <label for="book_title">Body</label>
    <div class="field_with_errors">
     <%= f.text_field :body %>
    </div>

    <div class="actions">
    <p><%= f.submit 'Create Book' %></p>
    </div>

    <% end %>
  <% end %>


 <%= form_with model: @book do |f| %>
 <div class="field">
  <label for="book_title"><h4>Title</h4></label>
  <%= f.text_field :title %>
 </div>

  <div class="field">
  <h4>Body</h4>
  <%= f.text_area :body %>
  </div>

  <div class="actions">
  <p><%= f.submit 'Create Book' %></p>
  </div>

  <%= link_to "Edit", edit_book_path(@book.id) %>
   |
  <%= link_to "Back", book_path(book.id) %>

 <% end %>

</body>


